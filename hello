# Endpoint Config
esif.endpoint.config:
  id: hello.source.endpoint
  name: hello-source
  type: source
  modelType: direct
  provider: $(hello.provider)
  instance: default
  className: String.class
  format: TEXT

# Route Config
esif.route.config:
  id: hello-route
  name: hello-world-route
  description: Simple ESIF hello world route
  enabled: true

  source:
    endpointIds:
      - hello.source.endpoint

  process:
    - name: hello-world-processor
      action: process
      processor: helloWorldProcessor

